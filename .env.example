# Environment variables for Homie Orchestrator

# Orchestrator Configuration
ORCHESTRATOR_SECRET_KEY=your-secret-key-change-this-in-production
ORCHESTRATOR_CONFIG_PATH=/config
ORCHESTRATOR_DATA_PATH=/data
ORCHESTRATOR_BACKUP_PATH=/backups

# Database Configuration
POSTGRES_DB=homie
POSTGRES_USER=homie
POSTGRES_PASSWORD=homie_password
POSTGRES_URL=postgresql+asyncpg://homie:homie_password@postgres:5432/homie

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Logging
LOG_LEVEL=INFO

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
